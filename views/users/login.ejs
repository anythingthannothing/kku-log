<% layout('layouts/boilerplate') -%>
<h1>로그인</h1>
<form action="/users/login" method="POST">
  <div>
    <label for="id">ID: </label>
    <input
      type="text"
      name="user[id]"
      id="id"
      placeholder="ID를 입력하세요!"
      required
    />
  </div>
  <div>
    <label for="password">Password: </label>
    <input
      type="password"
      name="user[password]"
      id="password"
      placeholder="비밀번호를 입력하세요!"
      required
    />
  </div>
  <button class="btn btn-success">로그인</button>
</form>
