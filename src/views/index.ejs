<% layout('layouts/boilerplate') -%>
<% for (let post of posts) { %>
  <a href="/posts/<%= post._id %>" class="">
  <section class="container-fluid shadow mb-3 px-0">
      <div class="card">
        <div class="row g-0">
          <div class="col-3">
            <img
              src="<%= post.thumbnail.thumbnail %>"
              class="img-fluid rounded-start"
            />
          </div>
          <div class="col-9">
            <div class="card-body">
              <h2 class="card-title"><%= post.title %></h2>
              <p class="card-text"><%= post.content %></p>
              <div class="d-flex justify-content-between">
                <span class="card-text"><small class=text-muted">최초 작성일: <%= post.datePosted %></small></span>
                <span class="card-text"><small class=text-muted">최종 수정일: <%= post.EditedLast %></small></span>
                <span class="card-text"><small class=text-muted">조회수: 0</small></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </a>
<% } %>
